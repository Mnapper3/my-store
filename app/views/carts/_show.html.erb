<section class="product-list">
	<div class="container">
	   <div class="col-md-12">
	       <h2>Carts Details</h2>
	       <br>
	       		<%= render 'carts/cart'%>
	       <br>
	       <h5>Total: <%= number_to_currency @cart.total_price%></h5>
	       <br>
	       <%= link_to "Back to Store", shop_path %>
	       <br>
	       <!--prompts user if their sure when empting the shopping cart-->
	       <%= link_to 'Empty Your Cart', @cart, method: :delete, data: {confirm: 'You sure?'} %>
	   </div>
	</div>
</section>